{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"title": "AI Functions Index Schema",
	"type": "object",
	"properties": {
		"import": {
			"type": "string",
			"description": "Modules to import"
		},
		"functions": {
			"type": "object",
			"description": "Functions definitions",
			"patternProperties": {
				"^[a-zA-Z_][a-zA-Z0-9_]*$": {
					"type": "object",
					"properties": {
						"description": {
							"type": "string",
							"description": "Description of the function"
						},
						"parameters": {
							"type": "array",
							"items": {
								"type": "string"
							},
							"description": "Parameters required by the function"
						},
						"returns": {
							"type": "string",
							"description": "Return value of the function"
						},
						"calls": {
							"type": "array",
							"items": {
								"type": "string"
							},
							"description": "Functions called within this function"
						},
						"logic": {
							"type": "array",
							"items": {
								"type": "string"
							},
							"description": "Logic of the function"
						},
						"perspectives": {
							"type": "array",
							"items": {
								"type": "string"
							},
							"description": "Perspectives for Da Vinci insights"
						},
						"intuition": {
							"type": "array",
							"items": {
								"type": "string"
							},
							"description": "Intuition for human insights"
						},
						"neural_perspectives": {
							"type": "array",
							"items": {
								"type": "string"
							},
							"description": "Neural network perspectives"
						},
						"quantum_perspectives": {
							"type": "array",
							"items": {
								"type": "string"
							},
							"description": "Quantum computing perspectives"
						},
						"kindness_perspectives": {
							"type": "array",
							"items": {
								"type": "string"
							},
							"description": "Perspectives of resilient kindness"
						}
					},
					"required": [
						"parameters",
						"returns"
					]
				}
			},
			"additionalProperties": false
		},
		"example_use": {
			"type": "object",
			"properties": {
				"question": {
					"type": "string",
					"description": "Example question"
				},
				"responses": {
					"type": "object",
					"properties": {
						"newton_thoughts": {
							"type": "string",
							"description": "Newtonian insights"
						},
						"davinci_insights": {
							"type": "string",
							"description": "Da Vinci's creative thoughts"
						},
						"einstein_insights": {
							"type": "string",
							"description": "Einstein's perspective"
						},
						"suntzu_insights": {
							"type": "string",
							"description": "Sun Tzu's strategy"
						},
						"gandhi_insights": {
							"type": "string",
							"description": "Gandhi's peaceful approach"
						},
						"adalovelace_insights": {
							"type": "string",
							"description": "Ada Lovelace's innovative take"
						},
						"universal_reasoning": {
							"type": "string",
							"description": "Comprehensive response using various reasoning methods"
						}
					},
					"required": [
						"newton_thoughts",
						"davinci_insights",
						"einstein_insights",
						"suntzu_insights",
						"gandhi_insights",
						"adalovelace_insights",
						"universal_reasoning"
					]
				}
			},
			"required": [
				"question",
				"responses"
			]
		}
	},
	"required": [
		"import",
		"functions",
		"example_use"
	]
}